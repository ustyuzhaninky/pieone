
#:import os os
#:import get_hex_from_color kivy.utils.get_hex_from_color
#:import IconLeftWidget kivymd.uix.list.IconLeftWidget
#:import resource_find kivy.resources.resource_find

<ContactItem@OneLineAvatarListItem>
    icon: ""
    _txt_top_pad: "8dp"
    _txt_bot_pad: "8dp"
    height: "36dp"

    IconLeftWidget:
        icon: root.icon
        user_font_size: "18sp"
        theme_text_color: "Custom"
        text_color: app.theme_cls.text_color


<AboutContent>
    
    MDBoxLayout:
        orientation: "vertical"

        ScrollView:
            
            MDList:
                padding: "12dp"
                spacing: "12dp"

                MDBoxLayout:
                    spacing: "12dp"
                    size_hint_y: None
                    height: "72dp"
                    padding: "12dp"

                    Image:
                        spacing: "12dp"
                        size_hint: None, None
                        size: "72dp", "72dp"
                        source:
                            resource_find(f"{os.environ['PIEONE_ROOT']}\\" \
                            f"assets\\images\\about_screen\\logo.png")

                    MDBoxLayout:
                        orientation: "vertical"
                        adaptive_height: True
                        spacing: "8dp"
                        pos_hint: {"center_y": .5}

                        MDLabel:
                            adaptive_height: True
                            bold: True
                            markup: True
                            font_style: "H5"
                            text:
                                app.tr._("Petrochem Imitator Example, edition [color={}]ONE[/color]").format( \
                                get_hex_from_color(app.theme_cls.primary_color) \
                                )
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.text_color

                        MDLabel:
                            adaptive_height: True
                            bold: True
                            text: app.tr._("Open-source simulator example")
                            theme_text_color: "Hint"
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.text_color

                MDSeparator:

                MDLabel:
                    id: about_label
                    markup: True
                    adaptive_height: True
                    font_size: "13sp"
                    text: root.get_about_text()
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.text_color

                MDLabel:
                    adaptive_height: True
                    bold: True
                    markup: True
                    text: app.tr._("Conta—Åts")
                    font_style: "H5"
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.text_color

                MDBoxLayout:
                    adaptive_height: True
                    orientation: "vertical"

                    ContactItem:
                        icon: "youtube"
                        text: app.tr._("[size=14]Official YouTube channel[/size]")
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.text_color

                    ContactItem:
                        icon: "twitter"
                        text: app.tr._("[size=14]Twitter channel[/size]")
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.text_color

                    ContactItem:
                        icon: "email"
                        text: app.tr._("[size=14]ustyuzhaninky@hotmail.com[/size]")
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.text_color

                Widget:
                    size_hint_y: None
                    height: "72dp"
