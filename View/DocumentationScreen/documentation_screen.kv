
#:import os os
#:import get_hex_from_color kivy.utils.get_hex_from_color
#:import IconLeftWidget kivymd.uix.list.IconLeftWidget
#:import RstDocument kivy.uix.rst.RstDocument
#:import resource_find kivy.resources.resource_find

<DocumentationContent>

    MDBoxLayout:
        orientation: "vertical"

        MDNavigationLayout:
            
            MDScreenManager:

                MDScreen:
                    id: box
                            
                    MDBoxLayout:
                        orientation: "vertical"
                            
                        MDSegmentedControl:
                            id: lang_segments
                            pos_hint: {"center_x": .5, "center_y": .5}
                            on_active: root.set_language
                            md_bg_color: app.theme_cls.bg_dark
                            separator_color: app.theme_cls.opposite_bg_light
                            segment_color: app.theme_cls.bg_darkest

                            MDSegmentedControlItem:
                                text: "en"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.opposite_bg_light
                               
                            MDSegmentedControlItem:
                                text: "ru"
                                theme_text_color: "Custom"
                                text_color: app.theme_cls.opposite_bg_light

                        MDScrollView:
                            id: browser
                    
                    MDFloatingActionButton:
                        icon: "menu"
                        type: 'small'
                        on_release:
                            root.populate_drawer()

            MDNavigationDrawer:
                radius: (0, 16, 16, 0)
                padding: 0, 56, 12, 16
                state: "close"
                id: nav_drawer

                MDNavigationDrawerMenu:
                    id: nav_drawer_menu
