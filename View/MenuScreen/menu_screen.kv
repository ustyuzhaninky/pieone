#:import MenuCard View.MenuScreen.components.MenuCard

<MenuContent>
    orientation: "vertical"

    ScrollView:
        id: menu_list
        size_hint_x: None
        width: root.width * 95 / 100
        pos_hint: {"center_x": .5}
        bar_width: 0
        key_viewclass: 'viewclass'
        key_size: 'height'

        MDList:
            padding: dp(10)
            spacing: dp(24)
            default_size: None, dp(200)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height

            MenuCard:
                id: simulator_card
                title: app.tr._("Simulator")
                source: app.asset(f"{os.environ['PIEONE_ASSETS']}/images/menu_screen/simulator-dark.png")
                on_release: app.manager_screen.switch_screen('simulator')
                
            MenuCard:
                id: schematic_card
                title: app.tr._("Schematic")
                source: app.asset(f"{os.environ['PIEONE_ASSETS']}/images/menu_screen/schematic-dark.png")
                on_release: self.app.manager_screen.switch_screen('schematic')

            MenuCard:
                id: documentation_card
                title: app.tr._("Documentation")
                source: app.asset(f"{os.environ['PIEONE_ASSETS']}/images/menu_screen/documentation-dark.png")
                on_release: self.app.manager_screen.switch_screen('documentation')
               
            MenuCard:
                id: about_card
                title: app.tr._("About")
                source: app.asset(f"{os.environ['PIEONE_ASSETS']}/images/menu_screen/about-dark.png")
                on_release: self.app.manager_screen.switch_screen('about')
