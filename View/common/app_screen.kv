<BaseAppScreen>:
    returntool:
        [
        "arrow-left",
        lambda x: app.return_callback(x),
        app.tr._("Return"),
        app.tr._("Return")
        ]
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            id: bar
            title: "P.I.E. ONE"
            anchor_title: "center"
            adaptive_size: True
            opposite_colors: True
            use_overflow: True
            right_action_items:
                [
                ["theme-light-dark",
                lambda x: app.switch_theme_style(),
                app.tr._("Dark Mode"),
                app.tr._("Dark Mode")],
                ["translate-variant",
                lambda x: app.open_language_dialog(),
                app.tr._("Language"),
                app.tr._("Language")],
                ["close",
                lambda x:
                app.stop_callback(),
                app.tr._("Exit"),
                app.tr._("Exit")]
                ]
                        
            left_action_items:
                [
                root.get_left_button(),
                ]
    
        Placeholder:
            id: content
